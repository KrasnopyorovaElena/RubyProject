<h1>
  <%= @task.title %>
</h1>

<div class="actions btn-group">
  <%= link_to 'Edit', edit_task_path(@task), class: 'btn btn-secondary btn-sm' %>
  <%= link_to 'Delete', @task, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-secondary btn-sm' %>
</div>

<% if @task.project %>
  <p>
    <strong>Project:</strong>
    <%= link_to @task.project.name, @task.project %>
  </p>
<% end %>

<p>
  <strong>Author:</strong>
  <%= @task.author.username %>
</p>

<% if @task.executor %>
  <p>  
    <strong>Executor:</strong>
    <%= @task.executor.username %>
  </p>
<% end %>

<p>
  <strong>Status:</strong>
  <%= @task.status %>
</p>

<p>
  <strong>Description:</strong>
  <%= @task.description %>
</p>

<h2>Comments</h2>

<%= render 'comments/form', comment: @comment %>
<%= render @task.comments %>
