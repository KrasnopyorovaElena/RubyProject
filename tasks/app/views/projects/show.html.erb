<h1><%= @project.name %></h1>

<div class="btn-group mb-3">
  <% if @project.user == current_user %>
    <%= link_to 'Edit', edit_project_path(@project), class: 'btn btn-secondary btn-sm' %>
    <%= link_to 'Delete', @project, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-secondary btn-sm' %>
  <% end %>
  <%= link_to 'Back', projects_path, class: 'btn btn-secondary btn-sm' %>
</div>

<div class="project-tasks">
  <%= render template: 'tasks/index' %>
</div>
